{
  "extends": ["tslint:recommended", "tslint-sonarts", "codelyzer"],
  "rulesDirectory": ["codelyzer"],
  "rules": {
    "align": false,
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "warn"
    },
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [true, 140],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "private-static-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [true, "log", "debug", "info", "time", "timeEnd", "trace"],
    "no-inferrable-types": [true, "ignore-params"],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-use-before-declare": true,
    "no-var-requires": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single", "avoid-escape"],
    "no-output-on-prefix": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "no-hardcoded-credentials": false,
    "curly": true,
    "object-curly-spacing": ["error", "always"],
    "adjacent-overload-signatures": true,
    "member-access": [true, "no-public"],
    "no-any": true,
    "only-arrow-functions": true,
    "prefer-for-of": true,
    "forin": true,
    "no-duplicate-variable": true,
    "no-empty": [true, "allow-empty-catch"],
    "no-null-keyword": true,
    "no-trailing-whitespace": [true, "ignore-comments"],
    "indent": [true, "spaces", 4],
    "whitespace": [true, "check-branch", "check-module", "check-rest-spread", "check-preblock", "check-postbrace"],
    "import-spacing": true,
    "eofline": true,
    "prefer-on-push-component-change-detection": true,
    "no-unused-css": true,
    "template-use-track-by-function": true,
    "use-component-selector": true,
    "use-pipe-decorator": true,
    "component-selector": [true, "element", "app", "kebab-case"],
    "import-destructuring-spacing": true
  }
}
